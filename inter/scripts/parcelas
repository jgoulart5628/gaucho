//  error_reporting(E_ALL & ~(E_NOTICE | E_DEPRECATED | E_STRICT | E_WARNING));
$x = array(2,3,4,5, 6);
$dia = '2,6';
$d = explode(',',$dia);
// print_r($d);
$a = 1;
$y  = 6;
$x = 100;
$z[$a] = ceil($x / $y);
$res = ($x - $z[$a]) / ($y - $a);
 $a++; 
while ($a < ($y+1)) {
   $z[$a] = $res;
    $a++;
}
foreach ($z  as $p) {
echo $p.'-';
}
